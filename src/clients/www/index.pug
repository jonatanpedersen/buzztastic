main
	section.section.jumbotron-section
		.jumbotron-section__background
		.jumbotron
			img.splash.rotate(src="splash_3.png" alt="QuBu - The buzztastic quiz buzzer." title="QuBu")
			nav.jumbotron__nav
				a.button.button--large.get-started-button(href="https://app.qubu.io/") Get started
	section.section.stats-section
		.container
			h2.heading-2 Stats
			.stats
				each stat in stats
					case stat.metric
						when "quiz.created"
							p.stat
								span.stat__count= stat.count
								span.stat__heading Quizzes created
						when "quiz.team.created"
							p.stat
								span.stat__count= stat.count
								span.stat__heading Teams formed
						when "quiz.player.created"
							p.stat
								span.stat__count= stat.count
								span.stat__heading Players joined
						when "quiz.round.created"
							p.stat
								span.stat__count= stat.count
								span.stat__heading Rounds played
						when "quiz.round.buzz.created"
							p.stat
								span.stat__count= stat.count
								span.stat__heading Buzzes
