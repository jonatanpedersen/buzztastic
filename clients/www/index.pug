extend _layout
	block append styles
		style.
			.splash-1 { width: 20vw;}
			.splash { max-width: 50vw;}
			.rotate { animation: rotation 2s infinite linear; }
			.event { position: absolute; }
			.event__image { position: relative }

			.event__image--small { width: 50px; height: 50px; animation: small 5s forwards; }
			.event__image--medium { width: 100px; height: 100px; animation: medium 5s forwards; }
			.event__image--large { width: 150px; height: 150px; animation: large 5s forwards; }

			@keyframes rotation {
				from {
					transform: rotate(0deg);
				}
				to {
					transform: rotate(359deg);
				}
			}

			@keyframes small {
				0%   { opacity: 0; left: 0 }
				5%   { opacity: 1; }
				50%  { opacity: 1; }
				100% { opacity: 0; left: -50px }
			}

			@keyframes medium {
				0%   { opacity: 0; left: 0 }
				5%   { opacity: 1; }
				50%  { opacity: 1; }
				100% { opacity: 0; left: -100px }
			}

			@keyframes large {
				0%   { opacity: 0; left: 0 }
				5%   { opacity: 1; }
				50%  { opacity: 1; }
				100% { opacity: 0; left: -150px }
			}
	block append main
		main
			section.section.jumbotron-section
				.jumbo
				.container
					img.splash.rotate(src="splash_3.png" alt="QuBu - The buzztastic quiz buzzer." title="QuBu")
			section.section.stats-section
				.container
					h2.heading-2 Stats
			section.section.download-section
				.container
					h2.heading-2 Download

	block append scripts
		script(src="/socket.io/socket.io.js")
		script(src="index.js")
